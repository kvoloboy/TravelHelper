@model TourDetailsViewModel
@{
    ViewBag.Title = "Tour";
}
<div class="container-fluid text-center" margin-bottom:100px>
    <div class="row">
        <img class="card-img-top" src="Topkek.png" alt="Card image" width="100%" height="290">
        <div class="card-img-overlay mt-5 text-align-center">
            <h4 class="card-title" style=" font-size: 70px; color: #fcffff;">@Model.Name</h4>
           @* <p class="card-text" style=" font-size: 25px; color: #fcffff;">@Model.Location</p>*@
            <p class="card-text" style=" font-size: 25px; color: #fcffff;">@Model.Agency</p>
        </div>
    </div>
</div>
<div class="container mt-3">
    <p1>Trip Code:<p1>@Model.Id</p1> </p1>

</div>
<div class="container mb-3">
    <div class="row">
        <div class="col-6">
            <div class="card">
                <img class="card-img-top" src="Topmoestext.png" alt="Kek" width="100px" height="400">
                <div class="card-body">
                    <h6>Hotel</h6>
                    <p class="card-text">@Model.Hotel</p>
                    <hr />
                    <h6>Category</h6>
                    <p class="card-text">@Model.Category</p>
                </div>
            </div>
        </div>
        <div class="col-6">
            <p class="text-right">Rating </p>  @*RATING*@
            <div class="row">
                <div class="col-6 col-md-4">Trip Start Date</div>
                <div class="col-6 col-md-6">
                    <input type="date" name="startDate" />
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-6 col-md-4">Count People</div>
                <div class="col-6 col-md-6">
                    <input type="text" name="countPeople" />
                </div>
            </div>
            <hr />
            <div class="col-6 col-md-4">Price for day</div>
            <div class="col-6 col-md-6">
                <label>@Model.PricePerDay</label>
            </div>
            <button type="button" class="btn btn-primary">to order!</button>
            <h3 class="mt-3">About Trip</h3>
            <p>@Model.Description</p>
            <hr />
        </div>
    </div>
</div>
<div class="row">
    <img src="bottomWithText.png" class="img" width="100%" height="400">
</div>
